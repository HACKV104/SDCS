<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        android:layout_marginBottom="32dp"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“± Smart Data Capture"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#222222"
                android:letterSpacing="0.05"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A smarter way to collect and manage data"
                android:textSize="14sp"
                android:textColor="#777777"
                android:layout_marginBottom="4dp" />

            <TextView android:id="@+id/txtNetworkStatus" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Checking network..." android:layout_marginTop="24dp" android:textColor="#666666" android:textSize="14sp" android:layout_gravity="center" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnScanCamera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ“¸  Scan via Camera"
        android:textAllCaps="false"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_marginBottom="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVoiceInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸŽ¤  Voice Input"
        android:textAllCaps="false"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_marginBottom="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnUploadForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ“„  Upload Image"
        android:textAllCaps="false"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_marginBottom="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnViewRecords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ“Š  View Records"
        android:textAllCaps="false"
        style="@style/Widget.MaterialComponents.Button" />
</LinearLayout>
